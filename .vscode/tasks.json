{
    "tasks": [
        {
            "label": "Terminal (solo macOS, para dar permisos a VSC)",
            "type": "shell",
            "command": "osascript -e 'tell application \"Terminal\"\ndo script \"echo hello\"\nend tell'",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Compilar proyecto «calculadora»",
            "command": "make",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Ejecutar proyecto «calculadora»",
            "command": "./calculadora",
            "windows": {
                "command": "cmd",
                "args": ["/c", "chcp 65001 && .\\calculadora.exe"]
            },
            "dependsOn": "Compilar proyecto «calculadora»",
            "problemMatcher": []
        },
    ],
    "presentation": {
        "showReuseMessage": true,
        "panel": "shared",
        "reveal": "always",
        "focus": true,
    },
    "version": "2.0.0"
}